{
    "info": {
        "_postman_id": "7d9b9d36-e8d1-4235-866d-1bf91295db26",
        "name": "Peppermint API Key Management",
        "description": "API collection for the Peppermint Test Assessment (API Key Management).",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const response = pm.response.json();",
                                    "if (response.data && response.data.token) {",
                                    "    pm.collectionVariables.set(\"jwt_token\", response.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "API Keys",
            "item": [
                {
                    "name": "Generate API Key",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Production Server Key\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/api-keys/generate",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "api-keys",
                                "generate"
                            ]
                        }
                    }
                },
                {
                    "name": "List API Keys",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/api-keys",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "api-keys"
                            ]
                        }
                    }
                },
                {
                    "name": "Revoke API Key",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/api-keys/:id/revoke",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "api-keys",
                                ":id",
                                "revoke"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "REPLACE_WITH_KEY_ID",
                                    "description": "MongoDB ObjectId of the API Key to revoke"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Rotate API Key",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/api-keys/:id/rotate",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "api-keys",
                                ":id",
                                "rotate"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "REPLACE_WITH_KEY_ID",
                                    "description": "MongoDB ObjectId of the API Key to rotate"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Protected Routes (Requires API Key)",
            "item": [
                {
                    "name": "Access Protected Data",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "x-api-key",
                                "value": "REPLACE_WITH_YOUR_RAW_API_KEY",
                                "description": "The raw API key (e.g., sk_live_...)",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/protected/data",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "protected",
                                "data"
                            ]
                        },
                        "description": "Test the protected route to verify the API key and generate AccessLogs. Repeating this request frequently will also trigger the Rate Limiter (max 100 requests per 15 mins)."
                    }
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        }
    ]
}